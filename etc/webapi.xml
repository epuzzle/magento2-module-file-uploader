<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/epuzzle-file-uploader/upload" method="POST">
        <service class="EPuzzle\FileUploader\Api\FileUploaderManagementInterface" method="upload"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/epuzzle-file-uploader/:fileId" method="GET">
        <service class="EPuzzle\FileUploader\Api\FileRepositoryInterface" method="get"/>
        <resources>
            <resource ref="EPuzzle_FileUploader::view_file"/>
        </resources>
    </route>
    <route url="/V1/epuzzle-file-uploader/list" method="GET">
        <service class="EPuzzle\FileUploader\Api\FileRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="EPuzzle_FileUploader::view_file"/>
        </resources>
    </route>
    <route url="/V1/epuzzle-file-uploader" method="POST">
        <service class="EPuzzle\FileUploader\Api\FileRepositoryInterface" method="save"/>
        <resources>
            <resource ref="EPuzzle_FileUploader::save_file"/>
        </resources>
    </route>
    <route url="/V1/epuzzle-file-uploader/:fileId" method="DELETE">
        <service class="EPuzzle\FileUploader\Api\FileRepositoryInterface" method="deleteById"/>
        <resources>
            <resource ref="EPuzzle_FileUploader::save_file"/>
        </resources>
    </route>
</routes>
